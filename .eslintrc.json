{
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module"
  },

  "env": {
    "node": true,
    "es6": true
  },

  "plugins": [
    "import",
    "promise",
    "i18n"
  ],

  "globals": {
    "NODE_ENV": true
  },

  "rules": {
    "semi": [2, "always"],
    "space-before-function-paren": [2, "never"],
    "object-curly-spacing": [2, "never"],
    "no-unused-expressions": 2,
    "dot-notation": 2,
    "consistent-return": 2,

    "i18n/no-chinese-character": 2
  },

  "extends": ["airbnb-base"],
  "installedESLint": true
}